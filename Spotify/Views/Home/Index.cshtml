@model HomeIndexVM

<form asp-controller="Home" asp-action="Index" style="width: 30%; margin:auto; display:flex; flex-direction:column;">
    <h3>Search by artist</h3>
    <input asp-for="SearchParameters.Text" style="width: 50%; margin:auto" />
    <div style="display:inline-flex; height:fit-content; margin-bottom:1em;">
        <div>
            <h3>Pick genre (choice up to 4)</h3>
            <span>hold ctrl to chooce multiple</span>
            <select multiple asp-for="SearchParameters.Genre" style="width:100%; height:12em">
                @foreach (var item in Model.GenreSeed.Genres)
                {
                    <option>@item</option>
                }
            </select>
        </div>
        <div style="width:50%">
            <h3>Popularity</h3>
            <p>value 0-100</p>
            <input asp-for="SearchParameters.Popularity" type="number" min="0" max="100" />
            <div>
                <h3>Mood</h3>
                <div style="display:flex; justify-content: space-around;">
                    <span>sad</span>
                    <span>happy</span>
                </div>
                <input asp-for="SearchParameters.Valence" type="range" min="0,0" max="1,0" value="0,5" class="slider" id="myRange">
            </div>
        </div>
    </div>
    <input style="width:50%; margin:auto" type="submit" value="Search" />
</form>

